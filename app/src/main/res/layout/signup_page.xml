<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:background="@drawable/orange"
    android:orientation="vertical" android:layout_width="match_parent" android:padding="5dp"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"  android:background="@drawable/button_border"
        android:id="@+id/relativeLayout2">

        <TextView
        android:layout_width="wrap_content" android:textStyle="bold"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SIGN UP"
        android:id="@+id/textView3"

        android:layout_centerHorizontal="true" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent" android:padding="5dp"
        android:layout_height="wrap_content" android:background="@drawable/rr"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="78dp"
        android:id="@+id/relativeLayout3">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress" android:textColor="#000000"
        android:ems="10" android:textStyle="bold" android:textColorHint="#c0c0c0"
        android:id="@+id/email_signup"


        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/username_signup"
        android:textStyle="bold"
        android:layout_below="@+id/email_signup" android:textColorHint="#c0c0c0"
        android:layout_alignParentLeft="true" android:textColor="#000"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/email_signup"
        android:layout_alignEnd="@+id/email_signup"
        android:hint="Username"
        style="bold" />

    <EditText android:textColorHint="#c0c0c0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword" android:textColor="#000000"
        android:ems="10"
        android:id="@+id/password_signup"  android:hint="Password" android:textStyle="bold"
        android:layout_below="@+id/username_signup"
        android:layout_alignLeft="@+id/username_signup"
        android:layout_alignStart="@+id/username_signup"
        android:layout_alignRight="@+id/username_signup"
        android:layout_alignEnd="@+id/username_signup" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10" android:textStyle="bold"
        android:id="@+id/phone_signup" android:textColor="#000000" android:hint="Phone" android:textColorHint="#c0c0c0"
        android:layout_below="@+id/password_signup"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/password_signup"
        android:layout_alignEnd="@+id/password_signup" />


    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATE ACCOUNT"
        android:id="@+id/button2" android:clickable="true"                  android:onClick="Finish_signup"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" android:background="@drawable/button_border"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/relativeLayout3" android:alpha="1"
        android:layout_alignEnd="@+id/relativeLayout3" />


</RelativeLayout>