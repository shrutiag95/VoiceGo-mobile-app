<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:padding="10dp"
    android:orientation="vertical" android:layout_width="match_parent" android:background="@drawable/orange"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="120dp"
            android:src="@drawable/phn"
            android:layout_height="120dp"
            android:id="@+id/imageView6"
            android:layout_alignBottom="@+id/imageView7"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:id="@+id/imageView7"
            android:src="@drawable/tk"
            android:layout_gravity="center"
            android:foregroundGravity="center"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#ffffff"
            android:layout_marginTop="43dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Message SENT"
            android:id="@+id/textView2"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/imageView6"
            android:layout_centerHorizontal="true" />


        <Button
            android:layout_width="180dp" android:onClick="confirm_otp_mobile"
            android:layout_height="wrap_content"
            android:text="CONFIRM OTP"
            android:id="@+id/confirm_otp_btn" android:background="@drawable/button_border" android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:hint="Enter OTP"
            android:padding="10dp"
            android:inputType="textPassword"
            android:textColor="#000000"
            android:ems="10"
            android:alpha="0.4"
            android:textColorHint="#000000"
            android:id="@+id/OTP_insert_mobile"
            android:background="@drawable/rr"
            android:layout_marginTop="50dp"
            android:layout_below="@+id/resend_sms_otp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textColor="#ff6200"
            android:text="If you did not recieve the message yet, CLICK HERE to resend"
            android:gravity="center"
            android:id="@+id/resend_sms_otp"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

    </LinearLayout>
