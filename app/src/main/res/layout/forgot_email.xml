<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:padding="15dp" android:clipToPadding="false"
    android:orientation="vertical" android:layout_width="match_parent" android:background="@drawable/orange"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent" android:background="#ffffff" android:alpha="0.5"
        android:layout_height="40dp"
        android:padding="10dp" android:elevation="20dp"
        android:id="@+id/linearLayout2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#000000" android:textStyle="bold"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Find your Account"
            android:id="@+id/find_email" />
    </LinearLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:hint="You email address"
        android:id="@+id/email_forgot_et" android:textColorHint="#ffffff"
        android:layout_below="@+id/linearLayout2" android:textColor="#ffffff"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/linearLayout2"
        android:layout_alignEnd="@+id/linearLayout2"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toEndOf="@+id/imageView2" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2" android:src="@drawable/man"
        android:layout_alignTop="@+id/email_forgot_et"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content" android:textSize="20dp"
        android:layout_height="wrap_content" android:textColor="#fff"
        android:text="@string/email_des" android:gravity="center"
        android:id="@+id/email_description"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/email_forgot_et"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm EMAIL" android:textSize="20dp"  android:onClick="confirm_email"
        android:id="@+id/confirm_email_btn" android:background="@drawable/button_border"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" android:textStyle="bold"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>